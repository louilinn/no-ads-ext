{
  "manifest_version": 2,
  "name": "No-ads-at-any-cost",
  "version": "1.0",

  "description": "Blocks any website with ads",

  "icons": {
    "48": "/icons/black.svg"
  },

  "permissions": ["webRequest", "<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/src/no-ads.js"]
    }
  ],
  "background": {
    "scripts": ["/src/no-ads-background.js"]
  },
  "browser_action": {
    "default_popup": "/html/popup.html"
  }
}